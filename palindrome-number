
class Solution {
    public boolean isPalindrome(int x) {
        if (x < 0) {
            return false;
        }
        int rev=0;

        int originalX = x;
        while (x>0){
            int rem=x%10;
            rev=rev*10+rem;
            x=x/10;

        }
        return rev==originalX;


    }
}
public class Palindrome {
    public static void main(String [] args){
        Solution solv=new Solution();
        int x=222;
        System.out.println(solv.isPalindrome(x));

    }

}
